<div id="<%= dom_id filme %>">
  <p>
    <strong>Nome:</strong>
    <%= filme.nome %>
  </p>

  <p>
    <strong>Ano:</strong>
    <%= filme.ano %>
  </p>

  <p>
    <strong>Desc:</strong>
    <%= filme.desc %>
  </p>
  
  <p>
  <strong>Cartaz:</strong>
  <%= image_tag(filme.cartaz) if filme.cartaz.attached? %>
  </p>

</div>
